---
import { Icon } from "astro-icon/components";

export type Props = {
  icon?: string;
  href: string;
  label?: string;
  class?: string;
};

const { icon, label, href, class: classes } = Astro.props;
---

<a
  href={href}
  aria-label={label || ""}
  class:list={[
    "flex items-center gap-x-3 mb-2 font-semibold opacity-80 hover:opacity-100 hover:bg-white/10 transtion-all duration-200 ease-in-out py-2 px-1 rounded-md",
    classes,
  ]}
>
  {icon && <Icon name={icon} class="size-5" />}
  <span class="capitalize">
    <slot />
  </span>
</a>
